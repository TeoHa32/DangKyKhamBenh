@model MedicalAppointment.Models.ApplicationUser

@{
    ViewData["Title"] = "Details";
}

<h1>Chi tiết tài khoản</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Họ và tên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            Ngày sinh
        </dt>
        <dd class="col-sm-10">
            @String.Format("{0:dd/MM/yyyy}", @Model.DateOfBirth)
        </dd>
        <dt class="col-sm-2">
            Giới tính
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gender)
        </dd>
        <dt class="col-sm-2">
            Địa chỉ
        </dt>
        <dd class="col-sm-10">
            @Model.Address
        </dd>
        <dt class="col-sm-2">
            Số điện thoại
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
</div>
<div class="col-md-3">
    <h4>Vai trò</h4>
    <hr />
    <table class="table table-bordered">
        @foreach (var item in ViewBag.RoleId as IEnumerable<SelectListItem> ?? Enumerable.Empty<SelectListItem>())
        {
            <tr>
                <td class="col-md-11">
                    <label asp-for="@item.Text">@item.Text</label>
                </td>
                <td class="col-md-1">
                    <input type="checkbox" name="RoleId" value="@item.Value" class="checkbox-item"
                        @(Html.Raw(ViewBag.GrantedRoles.Contains(item.Value) ? "checked" : ""))
                        onchange="SaveGrantPermissions('@Model.Id' , '@item.Value')" />
                </td>
            </tr>

        }
    </table>
</div>

