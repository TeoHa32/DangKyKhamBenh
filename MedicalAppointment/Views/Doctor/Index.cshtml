@model IEnumerable<MedicalAppointment.Models.Doctor>

    <div class="container">
        <div class="row">
            <div class="col-md-4 border p-3">
                <h3>Tìm kiếm theo</h3>
                <hr />
                <form>
                    <input name="inputsearch" class="form-control" placeholder="Tìm kiếm tên, chuyên khoa" />
                </form>
                <h5 class="mt-3">Chuyên khoa</h5>
                <form id="specialize-form">
                    <select name="inputsearch" class="form-control" asp-items="ViewBag.Specialize" onchange="SubmitForm(this.form)">
                        <option></option>
                    </select>
                    <button type="submit" style="display: none;" onchange="SubmitForm(this.form)">gửi</button>
                </form>

                <h5 class="mt-3">Giới tính</h5>
                <div class="form-control">
                    <form id="gender-form">
                        <span class="form-check">
                            <input type="radio" class="gender form-check-input" name="gender" value="Nam" />
                            <label class="form-check-label">Nam</label>
                        </span>
                        <span class="form-check">
                            <input type="radio" class="gender form-check-input" name="gender" value="Nữ">
                            <label class="form-check-label">Nữ</label>
                        </span>
                    </form>
                </div>

                <h5 class="mt-3">Sắp xếp theo</h5>
                <form>
                    <select class="form-control">
                        <option>Tên(A-Z)</option>
                        <option>Tên(Z-A)</option>

                    </select>

                </form>
                <button id="testbut">tets</button>

            </div>
            <div class="col-md-8 p-3 border border-start-0 row">
                <h3 class="text-center">Bác sĩ</h3>
                <div id="doctor-list">
                    @foreach (var item in Model)
                    {
                        <hr />
                        <div class="container px-5 pb-2">
                            <h4 class="text-primary">@item.User?.FullName</h4>
                            <div class="row ">
                                <div class="col-md-3 text-center">
                                    @if (item.User?.Image == null)
                                    {
                                        if (item.User?.Gender == "Nữ")
                                        {
                                            <img class="w-100 border img-fluid" style="max-height:177px" src="~/images/profile/female-doctor.png" />
                                        }
                                        else
                                        {
                                            <img class="w-100 border img-fluid" style="max-height:177px" src="~/images/profile/male-doctor.png" />
                                        }
                                    }
                                    else
                                    {
                                        <img class="w-100 border img-fluid" src="~/images/profile/@item.User.Image" />
                                    }
                                    <a class="btn btn-outline-primary mt-2">Xem chi tiết</a>
                                </div>
                                <div class="col-md-5">
                                    <h5>Chuyên khoa:</h5>
                                    <p>@item.Specialization?.Name</p>
                                    <h5>Chuyên môn:</h5>
                                    <p>Tốt nghiệp đại học Y Dược</p>
                                </div>
                                <div class="col-md-4">
                                    <h5>Đã khám và điều trị:</h5>
                                    <p><span class="text-danger">792</span> Bệnh nhân</p>
                                    <h5>Đánh giá: </h5>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>
